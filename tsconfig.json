{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "rootDir": "src", // Diretório do Código TypeScript
    "outDir": "lib", // Diretório de saída para os arquivos compilados
    "sourceMap": true, // Gera arquivos de mapa de origem para facilitar a depuração
    "noImplicitAny": true, // Não permite a declaração de variáveis ou parâmetros sem tipo
    "noImplicitReturns": true, // Verifica se todas as funções têm um tipo de retorno especificado
    "noEmitOnError": true, // Não gera código JS se houver um erro durante o processo de compilação
    "strictNullChecks": true, // Força a verificação de valores nulos ou indefinidos
    "noUnusedLocals": true // Sinaliza quando há variáveis declaradas e não utilizadas
  },
  "compileOnSave": true,
  "include": ["src/**/*"],
  "exclude": ["**/*.spec.ts"]
}